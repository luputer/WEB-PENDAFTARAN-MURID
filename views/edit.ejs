<div class="container mt-5">  
    <div class="card shadow">  
        <div class="card-body">  
            <h2 class="card-title text-center mb-4">Edit Form Pendaftaran Murid</h2>  
            <% if (typeof errors !='undefined' ) { %>
                <div class="alert alert-danger" role="alert">
                    <ul>
                        <% errors.forEach(error=> { %>
                            <li>
                                <%= error.msg %>
                            </li>
                            <% }) %>
                    </ul>
                </div>
                <% } %>
            <form action="/pendaftar?_method=PUT" method="POST">
                <input type="hidden" name="_id" value="<%= student._id %>">
                <input type="hidden" name="oldNama" value="<%= student.oldNama || student.nama %>">
                <div class="form-group mb-3">  
                    <label for="nama">Nama</label>  
                    <input type="text" id="nama" name="nama" required class="form-control" value="<%= student.nama %>" placeholder="Masukkan nama lengkap" />  
                </div>  
                <div class="form-group mb-3">  
                    <label for="umur">Umur</label>  
                    <input type="number" id="umur" name="umur" required class="form-control" value="<%= student.umur %>" placeholder="Masukkan umur" />  
                </div>  
                <div class="form-group mb-3">  
                    <label for="alamat">Alamat</label>  
                    <input type="text" id="alamat" name="alamat" required class="form-control" value="<%= student.alamat %>" placeholder="Masukkan alamat" />  
                </div>  
                <div class="form-group mb-3">  
                    <label for="asalSekolah">Asal Sekolah</label>  
                    <input type="text" id="asalSekolah" name="asalSekolah" required class="form-control"  value="<%= student.asalSekolah %>"  placeholder="Masukkan asal sekolah" />  
                </div>  
                <div class="form-group mb-3">  
                    <label for="tanggalLahir">Tanggal Lahir</label>  
                    <input type="date" id="tanggalLahir" name="tanggalLahir"  value="<%= student.tanggalLahir %>" required class="form-control" />  
                </div>  
                <button type="submit" class="btn btn-primary btn-block">Ubah</button>  
                <a href="/pendaftaran" class="btn btn-secondary">Kembali</a>
            </form>  
        </div>  
    </div>  
</div>