<div class="container mt-5">  
    <div class="card shadow">  
        <div class="card-body">  
            <h2 class="card-title text-center mb-4">Form Pendaftaran Murid</h2>
            <% if (typeof errors !='undefined' ) { %>
                <div class="alert alert-danger" role="alert">
                  <ul>
                    <% errors.forEach(error => { %>
                      <li><%= error.msg %></li>
                    <% }) %>
                  </ul>
                </div>
              <% } %> 
            <form action="/daftar" method="POST">  
                <div class="form-group mb-3">  
                    <label for="nama">Nama</label>  
                    <input type="text" id="nama" name="nama" required class="form-control" placeholder="Masukkan nama lengkap" />  
                </div>  
                <div class="form-group mb-3">  
                    <label for="umur">Umur</label>  
                    <input type="text"  id="umur" name="umur" required class="form-control" placeholder="Masukkan umur" />  
                </div>  
                <div class="form-group mb-3">  
                    <label for="alamat">Alamat</label>  
                    <input type="text" id="alamat" name="alamat" required class="form-control" placeholder="Masukkan alamat" />  
                </div>  
                <div class="form-group mb-3">  
                    <label for="asalSekolah">Asal Sekolah</label>  
                    <input type="text" id="asalSekolah" name="asalSekolah" required class="form-control" placeholder="Masukkan asal sekolah" />  
                </div>  
                <div class="form-group mb-3">  
                    <label for="tanggalLahir">Tanggal Lahir</label>  
                    <input type="date" id="tanggalLahir" name="tanggalLahir" required class="form-control" />  
                </div>  
                <button type="submit" class="btn btn-primary btn-block">Daftar</button>  
                <a href="/pendaftar"  class="btn btn-secondary btn-block">kembali</a>  
            </form>  
        </div>  
    </div>  
</div>